<resources>

    <style name="ButtonStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>


<style name="SettingsLabelStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_normal</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/settings_text_size</item>
</style>

<style name="SettingsInputStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_small</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textColorHint">#D4D4D4</item>
</style>

<style name="SettingsButtonStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:background">@drawable/state_list_drawable</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:padding">@dimen/spacing_normal</item>
</style>

